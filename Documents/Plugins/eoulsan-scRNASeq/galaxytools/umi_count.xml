<tool id="umi_count" name="umi_count">
	<description></description>
	<command interpreter="docker" dockerimage="genomicpariscentre/umi-tools:0.5.1">bash -c "umi_tools count --per-gene --gene-tag=XT --per-cell -i -I ${sam_input} -S ${output} 2>${output}.err"</command>
	<inputs>
		<param format="mapper_results_sam" name="sam_input" type="data" label="Source file"/>
		<!--param format="mapper_results_bam" name="bam_input" type="data" label="Source file"/-->	
	</inputs>
	<outputs>
		<data format="expression_matrix_tsv" name="output"/>
	</outputs>
</tool>
